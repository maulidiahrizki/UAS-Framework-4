    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="../../css/style.css"> <!-- Tautan ke file CSS -->
    <style>
        .menu-container {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            /* Default: Three columns */
            gap: 15px;
            /* Space between items */
            padding: 15px;
            /* Container padding */
            max-width: 1200px;
            /* Maximum width of the container */
            margin: 0 auto;
            /* Center the container */
        }

        .btn-outline-hokben {
            border-color: red;
            color: red;
            border-radius: 100cm;
        }

        .btn-outline-hokben:hover {
            color: black;
            border-color: red
        }

        .text-hokben-red {
            color: #d91319;
            text-decoration: solid;
        }

        .btn-yellow-hokben {
            background: yellow;
            border-radius: 35%;
            font-weight: 500;
        }

        .container-detail {
            max-width: 1000px;
            /* Maximum width of the container */
            margin: 0 auto;
            /* Center the container */
        }

        .menu-button {
            padding: 10px 20px;
            border: 1px solid #b10e15;
            border-radius: 35px;
            text-align: center;
            text-decoration: none;
            color: #b10e15;
            /* Original text color */
            font-size: 1em;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        /* Large screens: Five columns */
        @media (min-width: 1200px) {
            .menu-container {
                grid-template-columns: repeat(5, 1fr);
            }
        }

        /* Medium screens: Four columns */
        @media (min-width: 992px) and (max-width: 1199px) {
            .menu-container {
                grid-template-columns: repeat(4, 1fr);
            }
        }

        /* Small screens: Three columns */
        @media (min-width: 768px) and (max-width: 991px) {
            .menu-container {
                grid-template-columns: repeat(3, 1fr);
            }
        }

        /* Extra small screens: Two columns */
        @media (max-width: 767px) {
            .menu-container {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        /* Very small screens: One column */
        @media (max-width: 576px) {
            .menu-container {
                grid-template-columns: 1fr;
            }
        }

        .icon {
            font-size: 24px;
            color: #d91319;
        }
    </style>
</head>

