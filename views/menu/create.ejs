<%- include('../partials_admin/__head.ejs') %>

<body>
    <%- include('../partials_admin/__navbar.ejs') %>
    <main id="main" class="main">

        <div class="pagetitle">
          <h1>Menu</h1>
          <nav>
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/superusers">Home</a></li>
              <li class="breadcrumb-item active">Data Menu</li>
              <li class="breadcrumb-item active">Create</li>
            </ol>
          </nav>
    
        </div><!-- End Page Title -->
    
        <section class="section dashboard">
          
            <div class="container">
                <h1 class="text-center mb-5">Input Data Barang</h1>
                <form action="/menu/store" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="nama" class="form-label">Foto Menu</label>
                        <input type="file" class="form-control" name="gambar_menu" required>
                    </div>
                    <div class="mb-3">
                        <label for="nama" class="form-label">Nama</label>
                        <input type="text" class="form-control" name="nama_menu" required>
                    </div>
                    <div class="mb-3">
                        <label for="nama" class="form-label">Komposisi</label>
                        <input type="text" class="form-control" name="komposisi_menu" required>
                    </div>
                    <div class="mb-3">
                        <label for="nama" class="form-label">Kategori</label>
                        <select class="form-select" aria-label="Pilih Tingkat Keahlian" name="id_kategori" required>
                            <option selected>Pilih Kategori</option>
                            <% for(var i=0; i < data.length; i++){ %>
                                <option value="<%= data[i].id_kategori %>"><%= data[i].nama_kategori %></option>
                            <% } %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="nama" class="form-label">Harga</label>
                        <input type="text" class="form-control" name="harga_menu" required>
                    </div>
                    
                    <div class="mb-3">
                        <button type="submit" class="btn btn-sm btn-success">Simpan</button>
                    </div>
                </form>
            </div>        
        </section>
        <%- include('../partials_admin/__footer.ejs') %>
