<div class="container">
    <form action="/pembayaran/update/<%= id_users %>" method="POST">
    <div class="mb-3">
        <label for="nama" class="form-label">Service</label>
        <select class="form-select" aria-label="Pilih Tingkat Keahlian" name="id_service" required>
            <option selected>Pilih Service</option>
            <% for(var i=0; i < data_service.length; i++){ %>
                <option value="<%= data_service[i].id_service %>"><%= data_service[i].nama_service %></option>
            <% } %>
        </select>
        <div class="mb-3">
            <label for="total" class="form-label">Total</label>
            <input type="text" class="form-control" id="total" name="total" readonly>
        </div>
        

        <div class="row">
            <div class="col">
                <table class="table mt-5 table-borderless">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Nama</th>
                            <th scope="col">Jumlah</th>
                            <th scope="col">Harga</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i < data.length; i++){ %>
                        <tr>
                            <th scope="row">
                                <%= (i+1) %>
                            </th>
                            <td>
                                <%= data[i].nama_menu%>
                            </td>
                            <td>
                                <%= data[i].jumlah %>
                            </td>
                            <td>
                                <%= data[i].harga_menu %>
                            </td>
                        </tr>
                        <%} %>
                    </tbody>
                </table>
                <button type="submit" class="pesan-button" style="background-color: red; color: white;">Bayar</button>
                <button href="/menu/users" class="pesan-button" style="color: white; border-color: red;" onclick="window.location.href='/menu/users'">Back</button>
            </form>
            </div>
        </div>
    </div>
